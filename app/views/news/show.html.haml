.news_container
  = form_for @news, url: news_path do |f|
    .flashes
      - flash.each do |k,v|
        = content_tag :p, v, class: "flash flash-#{k}"
    .form-row
      = f.text_field :title, class: 'form-control', placeholder: 'Tilte'
    .form-row
      = f.text_area :annotation, class: 'form-control', rows: 5
    .form-row
      = f.text_field :date, class: 'form-control', placeholder: 'Show until'
    .form-row
      = f.submit(class: 'btn btn-default ')
      = link_to 'Cancel', root_path, class: 'btn btn-default'
